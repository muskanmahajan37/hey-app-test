<!DOCTYPE html>
<html>
<head>
  <title>HeyApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="c">
    <h1>Hey.</h1>
    <% if current_user %>
    <p class="navbar-text">Signed in as <%= current_user.name %>, <%= link_to "Log Out", logout_path %></p>
    <% end %>
  <%= flash[:alert] %>
  <%= flash[:notice] %>
  </div>
  <br>
  <%= yield %>
</div>

</body>
</html>
